<div class="notes-top">
  <div class="container">
    <div class="main">
      
      <div class="top-wrapper">
        <div class="profile">
          <div class="image-wrapper">
            <img src="<%="/user_images/#{@current_user.image_name}" %>"></img>
          </div>
          <h3><%=@current_user.name %></h3>
          <div class="profile-text">
            <p><%=@current_user.profile %></p>
          </div>
        </div>
      </div>
      
      <div class="notes-wrapper">
        <% @notes.each do |note| %>
        <div class="note">
          <p class="date"><%=note.created_at.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[note.created_at.wday]})")   %></p>
          <div class="note-body">
            <%=note.content %>
          </div>
          <div class="note-bottom">
            <ul>
              <li> <%=link_to("/notes/#{note.id}/editor") do %> <span class="fa fa-pencil"></span> <% end %><li>
              <li> <%=link_to("/notes/#{note.id}/destroy_confirm") do %> <span class="fa fa-trash"></span> <% end %><li>
            </ul>
          </div>
          <div class="clear"></div> <!-- この行はfloat解除のための空の要素 -->
        </div>
        <% end %>
      </div>
    </div>
  </div>

</div>